@model EnjoyOurTour.Models.ViewModel.Admin.AddCustomerViewModel

@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form id="AddCustomerForm" name="AddCustomerForm" method="post">
    <div class="row">
        <div class="col-md-12 col-lg-6 col-lg-offset-3">
            <h1 class="page-header">Add Customer</h1>
        </div>
        <div class="col-md-6 col-lg-3 col-lg-offset-3">
            <div class="form-group">
                <label for="Username">Username</label>
                <input type="text" id="Username" name="Username" class="form-control" placeholder="Enter Username" value="@Model.Username" />
                @Html.ValidationMessageFor(e => e.Username)
            </div>
            <div class="form-group">
                <label for="EmailAddress">EmailAddress</label>
                <input type="text" id="EmailAddress" name="EmailAddress" class="form-control" placeholder="Enter Email Address" value="@Model.EmailAddress" />
                @Html.ValidationMessageFor(e => e.EmailAddress)
            </div>
            <div class="form-group">
                <label for="CustomerName">CustomerName</label>
                <input type="text" id="CustomerName" name="CustomerName" class="form-control" placeholder="Enter Customer Name" value="@Model.CustomerName" />
                @Html.ValidationMessageFor(e => e.CustomerName)
            </div>
            <div class="form-group">
                <label for="NRIC">NRIC</label>
                <input type="text" id="NRIC" name="NRIC" class="form-control" placeholder="Enter NRIC" value="@Model.NRIC" />
                @Html.ValidationMessageFor(e => e.NRIC)
            </div>
            <div class="form-group">
                <label for="BankName">Bank Name</label>
                <input type="text" id="BankName" name="BankName" class="form-control" placeholder="Enter Bank Name" value="@Model.BankName" />
                @Html.ValidationMessageFor(e => e.BankName)
            </div>
            <div class="form-group">
                <label for="BankAccountNumber">Bank Account Number</label>
                <input type="password" id="BankAccountNumber" name="BankAccountNumber" class="form-control" placeholder="Enter Bank Account Number" value="@Model.BankAccountNumber" />
                @Html.ValidationMessageFor(e => e.BankAccountNumber)
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="Enter Phone Number" value="@Model.PhoneNumber" />
                @Html.ValidationMessageFor(e => e.PhoneNumber)
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" id="Address" name="FulAddresslName" class="form-control" placeholder="Enter Address" value="@Model.Address" />
                @Html.ValidationMessageFor(e => e.Address)
            </div>
            <div class="form-group">
                <label for="AvailableTVR">Available TVR</label>
                <input type="text" id="AvailableTVR" name="AvailableTVR" class="form-control" placeholder="Enter Available TVR" value="@Model.AvailableTVR" />
                @Html.ValidationMessageFor(e => e.AvailableTVR)
            </div>
            <div class="form-group">
                <label for="AvailableAmount">Available Amount (RM)</label>
                <input type="text" id="AvailableAmount" name="AvailableAmount" class="form-control" placeholder="Enter Available Amount" value="@Model.AvailableAmount" />
                @Html.ValidationMessageFor(e => e.AvailableAmount)
            </div>
            <div class="form-group">
                <label for="AvailablePoint">Available Reward Point</label>
                <input type="text" id="AvailablePoint" name="AvailablePoint" class="form-control" placeholder="Enter Available Reward Point" value="@Model.AvailablePoint" />
                @Html.ValidationMessageFor(e => e.AvailablePoint)
            </div>
            <div class="form-group">
                <label for="AgentCode">Agent Code</label>
                <input type="number" id="AgentCode" name="AgentCode" class="form-control" placeholder="Enter Agent Code" value="@Model.AgentCode" />
                @Html.ValidationMessageFor(e => e.AgentCode)
            </div>
            <div class="form-group">
                <label for="IntroducerId">IntroducerId</label>
                <input type="text" id="IntroducerId" name="IntroducerId" class="form-control" placeholder="Enter IntroducerId" value="@Model.IntroducerId" />
                @Html.ValidationMessageFor(e => e.IntroducerId)
            </div>
            <div class="form-group">
                <label for="JoinDate">JoinDate</label>
                <input type="text" id="JoinDate" name="JoinDate" class="form-control" placeholder="Enter Join Date" value="@Model.JoinDate" />
                @Html.ValidationMessageFor(e => e.JoinDate)
            </div>
            <div class="form-group">
                <label for="DateOfBirth">Date Of Birth</label>
                <input type="text" id="DateOfBirth" name="DateOfBirth" class="form-control" placeholder="Enter Date Of Birth" value="@Model.DateOfBirth" />
                @Html.ValidationMessageFor(e => e.DateOfBirth)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-9">
            <button type="submit" class="btn btn-primary pull-right">Add Customer</button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12 col-lg-6 col-lg-offset-3">
            <button type="button" class="btn btn-block pull-right" onclick="history.go(-1);">Back</button>
        </div>
    </div>
</form>

<script>
    $('#JoinDate').datetimepicker({
        format: 'YYYY-MM-DD HH:mm',
    });

    $('#DateOfBirth').datetimepicker({
        format: 'YYYY-MM-DD HH:mm',
    });
</script>